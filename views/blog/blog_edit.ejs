<% include ../partials/header %>
<div class='container'>
    <div class='row'>
       <div style='width:40%;margin:75px auto;font-family:serif;'>
            <h3 style='text-align:center;padding-bottom:10px'>Edit your blog!</h3>
            <form action="/blog/<%= blog._id %>?_method=PUT" method="post">
                <div class='form-group'>
                   <input type='text' class='form-control' name='blog[bTitle]' value='<%= blog.bTitle %>' required> 
                </div>
                <div class='form-group'>
                   <input type='text' class='form-control' name='blog[bImage]' value='<%= blog.bImage %>' required> 
                </div>
                <div class='form-group'>
                   <textarea class='form-control blog-textarea' name="blog[bContent]" required><%= blog.bContent %></textarea>
                </div>
                <div class='form-group'>
                    <button class='btn btn-block login'><span style='color:#fff;'><i class="fas fa-paste"></i>&nbsp;Post</span></button>
                </div>
            </form>
            <a href="/blog">Go Back</a>
        </div> 
    </div>
</div>
<% include ../partials/footer %>