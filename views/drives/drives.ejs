<% include ../partials/header %>

    <div class="container">
		<div class='drives'>
		    <div class='jumbotron'>
		       <h2>Upcoming Drives!</h2>
    			<hr>
    			<p>
				Here we promote local initiatives that lead to the betterment of the environment. These initiatives include beach cleaning drives, tree plantation campaigns, beautification drives, etc. Anyone above the age of 15 can volunteer in these drives.<br> Click on the button below to organise your own campaign:  
			    </p>
			    <a class="btn btn-lg organise-button" href='/drives/new'>Organise</a> 
		    </div>
		</div>
	</div>

    <div class="container">
		<div class="row text-center" style="display:flex; flex-wrap:wrap;">
			
			<% drives.forEach(function(drive){ %>
			<div class="col-md-4 col-sm-12 ">
				<div class="thumbnail zoom">
					<img  src="<%= drive.dImage %>">
					<div class="drives-caption">
						<h4> <%= drive.dTitle %> </h4>
						<h4><%= drive.dLocation %></h4>
						<h4> <%= drive.dDate.toDateString() %></h4>
					</div>
					<p>
						<a href="/drives/<%= drive._id %>" class="btn drives-btn">Read More</a>
					</p>
				</div>
			</div>
			<% });%>
		</div>
	</div>

<% include ../partials/footer %>