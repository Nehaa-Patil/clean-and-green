<% include ../partials/header %>
    <div class='container'>
        <div class='row'>
            <div style='width:30%; margin:75px auto;font-family:serif;'>
                <h3 style='text-align:center;padding-bottom:10px'>Be a part of our campaign today!</h3>
                <form method='post' action='/register'>
                    <div class='form-group'>
                        <input type='text' name='username' class='form-control' placeholder='username' required>
                    </div>
                    <div class='form-group'>
                        <input type='email' name='email' class='form-control' placeholder='abc@email.com' required>
                    </div>
                    <div class='form-group'>
                        <input type='password' name='password' class='form-control' placeholder='password' required>
                    </div>
                    <div class='form-group'>
                        <input type='number' name='age' class='form-control' placeholder='age' required min='15'>
                    </div>
                    <div class='form-group'>
                        <button class='btn btn-block signup'><span style='color:#fff;'><i class='fas fa-tree'></i>&nbsp;Sign Up</span></button>
                    </div>
                </form>
                <a href="/home">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>